section#group-card(
class="relative " + (group.hero ? 'h-auto mb4' : 'h6')
)

	if group.hero
		div(data-role="hero-holder")
			img(
			src="https://res.cloudinary.com/huxztvldj/image/upload/c_limit,w_1200,h_768/" + group.hero
			class="db w-100 overflow-hidden"
			)

	-var idBorders = ' ' + (group.hero ? 'bt bb' : 'bb');

	div(
	data-role="group-id"
	class="cf bg-gold b--black-20 bw1 pv2" + idBorders
	)

		if group.logo
			div(
			data-role="group-logo"
			class="absolute b--black-10 ba bottom-1 right-1 br2 bw2 overflow-hidden w4 w5-l"
			)
				img(
				src="https://res.cloudinary.com/huxztvldj/image/upload/c_limit,w_300/" + group.logo
				class="db w-100 h-auto"
				)

		-var h1Offset = group.logo ? ' mr6 mr7-l' : '';

		h1(
		class="dib mb0 mt1 pl3 pr4 theme-headline v-top" + h1Offset
		)= group.title

		div(
		data-role="links-container"
		class="fl mt1"
		)

			each link in group.links

				a(
				href=link.value
				title=link.title
				class="dib w2 h2 ml3 pa1 br-100 bg-center hover-bg-white"
				style="background-image: url(/svg/" + link.platform + ".svg);"
				target="_blank" rel="noopener"
				)